#!/bin/sh

PROGRAM="/usr/bin/manjaro-settings-manager-gui"

if   [ $(which gksu) ]; then
	gksu "$PROGRAM" -- $@
elif [ $(which kdesu) ]; then
	kdesu "$PROGRAM" -- $@
elif [ $(which pkexec) ]; then
	pkexec "$PROGRAM" "$@"
else
	echo "error: no pkexec nor sudo frontend application found! Abording..." 1>&2
	exit 1
fi
